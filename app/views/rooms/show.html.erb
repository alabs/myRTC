<% @OG_TITLE = "Room #{@room.name}" %>
<% if notice %>
  <p id="notice" class="alert alert-primary"><%= notice %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">

    <% if @room.password? and not @room.check_password? params[:roomgivenpass] %>

      <form role="form" class="form-horizontal" style="margin-top: 50px;">
        <p>This room is password protected.</p>
        <div class="form-group">
          <label for="roomgivenpass" class="col-lg-4">Password</label>
          <div class="col-lg-6">
            <input type="password" class="form-control" id="roomgivenpass" name="roomgivenpass" placeholder="Password">
          </div>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

      <% else %>

      <div class="row" style="margin: 20px 0px;">
        <div class="col-md-8">
          <div class="alert alert-success hide js-copyclip-alert">
            <strong>Copy!</strong> We've copied this URL to the clipboard to you to share it. 
          </div>
          <div class="alert alert-info js-accept-webrtc">
            <strong>Atention!</strong> We're going to ask you for permition to access to your webcam and microphone. Please accept it. In case you have closed it you can refresh this page. 
          </div>
          <div class="alert alert-danger hide js-no-webrtc">
            <strong>Oh no!</strong> It seems your browser isn't supported. We invite you to install it a modern browser, like Mozilla Firefox and Google Chrome. 
          </div>
          <div class="col-md-12" id="remotes" style="text-align:center;"> </div>
          <div class="col-md-12" id="localVideo" style="text-align:center;"></div>
        </div>
        <div class="col-md-4">

          <div style="border-left: 1px solid #E5E5E5; width: 100%;">
            <div id="chat-output" style="height:300px; font-size: 0.7em; text-align:left; margin-left: 5px;">
            </div>
            <input type="text" id="user-id" style="display:none; font-size: 0.8em; margin-left: -.5em; width: 80%;">
            <input type="text" id="chat-input" style="font-size: 0.7em; margin-left: -.5em; width: 80%; height:50px; border: 1px solid #E5E5E5; padding:1px;"
            placeholder="Enter your message" >
            <input type="text" id="user-name" style="font-size: 0.7em; margin-left: -.5em; width: 80%; border: 1px solid #E5E5E5; padding:1px; "
            placeholder="anonymous-23" >
          </div>
        </div>
      </div>

    <% end %>

    <hr />
  </div>
</div>
</div>

